<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{% block title %}Internal Training Center{% endblock %}</title>

        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i&display=swap" rel="stylesheet" />
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <h1 class="visually-hidden">
                Internal Training Center
            </h1>

            <nav class="navbar navbar-expand-xl navbar-light bg-light">
                <div class="container mt-4 mb-3">
                    <img src="https://thecodest.co/images/logo.svg" alt="The Codest" width="220" height="73" class="navbar-brand lift">

                    <a class="navbar-brand me-4 pr-2" href="{{ path('homepage') }}">
                        Internal Training Center
                    </a>

                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#header-menu" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Show/Hide navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="header-menu">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item me-3">
                                <a class="nav-link" href="{{ path('admin') }}">
                                    Admin
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <nav class="bg-light border-bottom">
                <div class="container">
                    {% for category in categories %}
                        <span class="text-black-50 text-lowercase text-sm-center text-opacity-25 small font-monospace">
                            <button class="btn btn-outline-primary btn-sm">#{{ category }}</button>
                        </span>
                    {% endfor %}
                </div>
            </nav>
        </header>

        <main role="main" class="container-fluid mt-5">
            {% block body %}
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="card lift" style="width: 18rem;">
                                <img src="https://logowik.com/content/uploads/images/php.jpg" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">PHP Questions</h5>
                                    <p class="card-text">
                                        From basic ones to complicated and near-impossible to solve. Take your time with this. :-)

                                    <div class="alert alert-primary font-monospace" role="alert">
                                        Questions available: {{ allquestions.count }}
                                    </div>
                                    </p>
                                    <a href="#" class="btn btn-primary">Take PHP Quiz</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card lift" style="width: 18rem;">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/60/Symfony2.svg/1280px-Symfony2.svg.png" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">Symfony Questions</h5>
                                    <p class="card-text">
                                        Symfony questions based on real certification course.

                                    <div class="alert alert-primary font-monospace" role="alert">
                                        Questions available: {{ allquestions.count }}
                                    </div>
                                    </p>
                                    <a href="{{ path('training_symfony') }}" class="btn btn-primary">Take Symfony Quiz</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card lift" style="width: 18rem;">
                                <img src="https://www.vectorlogo.zone/logos/angular/angular-ar21.png" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">Angular Questions</h5>
                                    <p class="card-text">
                                        Coming soon!

                                    <div class="alert alert-primary font-monospace" role="alert">
                                        Questions available: 0
                                    </div>
                                    </p>
                                    <a href="#" class="btn btn-primary btn-dark" disabled="disabled">Coming soon</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            {% endblock %}
        </main>

        <footer class="mt-7 px-3 py-5 text-center text-muted">
            <p>
                Internal Training Center
            </p>
            <p>
                <a href="#" class="text-white">Back to top</a>
            </p>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
